<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.github.yeriomin.smsscheduler">
    <uses-permission android:name="android.permission.READ_CONTACTS"/>
    <uses-permission android:name="android.permission.SEND_SMS"/>
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name=".Activity.SmsListActivity" android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activity.AddSmsActivity" />
        <receiver android:name=".BootReceiver" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>
        <receiver android:name=".AlarmReceiver" >
            <intent-filter>
                <action android:name="com.github.yeriomin.smsscheduler.AlarmReceiver.INTENT_FILTER" />
            </intent-filter>
        </receiver>
        <receiver android:name=".SmsSentReceiver" />
        <receiver android:name=".SmsDeliveredReceiver" />
        <service android:name=".SmsSenderService" >
            <intent-filter>
                <action android:name="com.github.yeriomin.smsscheduler.AlarmReceiver.INTENT_FILTER" />
            </intent-filter>
        </service>
        <service android:name=".SmsSentService" />
    </application>
</manifest>
